<%- include('../partials/header') %>
<div class="container">
  <div class="row">
      <div class="col-12 text-center my-5">
          <h1>Edit <%= campground.name %></h1>
      </div>
      <div class="col-8 mx-auto">
          <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mb-3">
              <div class="form-group">
                <label for="addCampName">What's the Campgrounds Name?</label>
                <input value="<%= campground.name %>" type="text" name="name" class="form-control" id="addCampName" aria-describedby="add campground name">
              </div>
              <div class="form-group">
                <label for="addImageAddress">What's the Image URL</label>
                <input value="<%= campground.image %>" type="text" name="image" class="form-control" id="addImageAddress">
              </div>
              <div class="form-group">
                <label for="addPrice">What's the Price?</label>
                <input type="number" value="<%= campground.price %>" name="price" class="form-control" id="addPrice" min="0.01" step="0.01">
              </div>
              <div class="form-group">
                <label for="addDescription">Give a Description</label>
                <textarea name="description" class="form-control" id="addDescription"><%= campground.description %></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds" class="btn btn-danger d-block">Go Back</a>
      </div>
  </div>
</div>
<%- include('../partials/footer') %>