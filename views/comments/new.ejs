<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center my-5">
            <h1>Add New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-8 mx-auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mb-3">
                <div class="form-group">
                  <label for="addCampName">Text</label>
                  <input type="text" name="comment[text]" class="form-control" id="addCampName" aria-describedby="add campground name">
                </div>
                <!-- <div class="form-group">
                  <label for="addImageAddress">Author</label>
                  <input type="text" name="comment[author]" class="form-control" id="addImageAddress">
                </div> -->
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
              </form>
              <a href="/campgrounds" class="btn btn-danger d-block">Go Back</a>
        </div>
    </div>
  </div>

<%- include('../partials/footer') %>