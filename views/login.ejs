<%- include('./partials/header') %>
<div class="container">
  <div class="row">
      <div class="col-12 text-center my-5">
          <h1>Login To You Account</h1>
      </div>
      <div class="col-8 mx-auto">
          <form action="/login" method="POST" class="mb-3">
              <div class="form-group">
                <label for="username">username</label>
                <input type="text" name="username" class="form-control" id="username" aria-describedby="add campground name">
              </div>
              <div class="form-group">
                <label for="password">password</label>
                <input type="password" name="password" class="form-control" id="password">
              </div>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/" class="btn btn-danger d-block">Go Home</a>
      </div>
  </div>
</div>
<%- include('./partials/footer') %>